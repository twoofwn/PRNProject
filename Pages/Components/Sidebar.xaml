<UserControl x:Class="PRNProject.Pages.Components.Sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PRNProject.Pages.Components"
             mc:Ignorable="d" 
             Height="Auto" Width="100">
    <UserControl.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#253858"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E1E4EA"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#C7CAD4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <StackPanel Background="#F4F5F7">
        <Button Content="Trang chủ" Style="{StaticResource SidebarButtonStyle}" Tag="Dashboard" Click="SidebarButton_Click"/>
        <Button Content="Dự án" Style="{StaticResource SidebarButtonStyle}" Tag="Projects" Click="SidebarButton_Click"/>
        <Button Content="Lịch" Style="{StaticResource SidebarButtonStyle}" Tag="Calendar" Click="SidebarButton_Click"/>
        <Button Content="Cài đặt" Style="{StaticResource SidebarButtonStyle}" Tag="Setting" Click="SidebarButton_Click"/>
        <Separator Margin="10,5" />
        <Button Content="Đăng xuất" Style="{StaticResource SidebarButtonStyle}" Tag="Logout" Click="SidebarButton_Click"/>
    </StackPanel>
</UserControl>
