<Page x:Class="PRNProject.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRNProject.Pages"
      xmlns:components="clr-namespace:PRNProject.Pages.Components"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="HomePage"
      Loaded="Page_Loaded">

    <Page.Resources>
        <local:PriorityToColorConverter x:Key="PriorityToColorConverter"/>

        <Style TargetType="Border" x:Key="KanbanColumnStyle">
            <Setter Property="Background" Value="#F4F5F7"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>

        <DataTemplate x:Key="TaskItemTemplate">
            <Border Background="White" CornerRadius="3" Padding="10" Margin="0,5" BorderThickness="1" BorderBrush="#DDDDDD">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Height="8" CornerRadius="3,3,0,0" Margin="-10,-10,-10,5" 
                            Background="{Binding PriorityId, Converter={StaticResource PriorityToColorConverter}}"/>

                    <TextBlock Grid.Row="0" Text="{Binding Title}" FontWeight="Bold" TextWrapping="Wrap" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="1" Text="{Binding DueAt, StringFormat='dd/MM/yyyy'}" Foreground="Gray" FontSize="11" Margin="0,5,0,0"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <DockPanel LastChildFill="True">
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="WelcomeTextBlock" Text="Chào mừng!"/>
            </StatusBarItem>
        </StatusBar>

        <components:Sidebar x:Name="SidebarControl" DockPanel.Dock="Left"/>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="BẢNG CÔNG VIỆC" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox x:Name="SearchTextBox" Width="200" Margin="0,0,10,0" TextChanged="SearchTextBox_TextChanged" ToolTip="Tìm kiếm theo tiêu đề công việc"/>
                <ComboBox x:Name="PriorityFilterComboBox" Width="150" Margin="0,0,10,0" SelectionChanged="Filter_SelectionChanged" ToolTip="Lọc theo độ ưu tiên"/>
                <ComboBox x:Name="TagFilterComboBox" Width="150" SelectionChanged="Filter_SelectionChanged" ToolTip="Lọc theo nhãn"/>
                <Button Content="Xóa lọc" Click="ClearFilterButton_Click" Margin="5,0,0,0"/>
            </StackPanel>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource KanbanColumnStyle}">
                    <StackPanel>
                        <TextBlock Text="CẦN LÀM (Todo)" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ListView x:Name="TodoListView" 
                                  ItemTemplate="{StaticResource TaskItemTemplate}" 
                                  BorderThickness="0" Background="Transparent"
                                  AllowDrop="True" Drop="ListView_Drop" 
                                  PreviewMouseLeftButtonDown="ListView_PreviewMouseLeftButtonDown"
                                  MouseMove="ListView_MouseMove"
                                  MouseDoubleClick="Task_MouseDoubleClick">
                        </ListView>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource KanbanColumnStyle}">
                    <StackPanel>
                        <TextBlock Text="ĐANG LÀM (In Progress)" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ListView x:Name="InProgressListView" 
                                  ItemTemplate="{StaticResource TaskItemTemplate}" 
                                  BorderThickness="0" Background="Transparent"
                                  AllowDrop="True" Drop="ListView_Drop"
                                  PreviewMouseLeftButtonDown="ListView_PreviewMouseLeftButtonDown"
                                  MouseMove="ListView_MouseMove"
                                  MouseDoubleClick="Task_MouseDoubleClick">
                        </ListView>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource KanbanColumnStyle}">
                    <StackPanel>
                        <TextBlock Text="HOÀN THÀNH (Done)" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ListView x:Name="DoneListView" 
                                  ItemTemplate="{StaticResource TaskItemTemplate}" 
                                  BorderThickness="0" Background="Transparent"
                                  AllowDrop="True" Drop="ListView_Drop"
                                  PreviewMouseLeftButtonDown="ListView_PreviewMouseLeftButtonDown"
                                  MouseMove="ListView_MouseMove"
                                  MouseDoubleClick="Task_MouseDoubleClick">
                        </ListView>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </DockPanel>
</Page>