<Page x:Class="PRNProject.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRNProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <DockPanel>
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem>
                    <TextBlock x:Name="WelcomeTextBlock" Text="Chào mừng!"/>
                </StatusBarItem>
            </StatusBar>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" MinWidth="180"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderBrush="Gainsboro" BorderThickness="0,0,1,0">
                    <DockPanel>
                        <TextBlock Text="DỰ ÁN CỦA BẠN" DockPanel.Dock="Top"
                               FontSize="16" FontWeight="Bold" Margin="10"/>
                        <ListView x:Name="ProjectsListView" BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <Ellipse Width="10" Height="10" Fill="{Binding ColorHex}" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Title}" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </DockPanel>
                </Border>

                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="LightGray"/>

                <DockPanel Grid.Column="2">
                    <TextBlock Text="DANH SÁCH CÔNG VIỆC" DockPanel.Dock="Top"
                           FontSize="20" FontWeight="Bold" Margin="15"/>
                    <ListView x:Name="TasksListView" Margin="10,0,10,10" BorderThickness="1" BorderBrush="Gainsboro">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Công việc" Width="300" DisplayMemberBinding="{Binding Title}"/>
                                <GridViewColumn Header="Trạng thái" Width="100" DisplayMemberBinding="{Binding Status}"/>
                                <GridViewColumn Header="Độ ưu tiên" Width="100" DisplayMemberBinding="{Binding Priority}"/>
                                <GridViewColumn Header="Hạn chót" Width="150" DisplayMemberBinding="{Binding DueAt, StringFormat='dd/MM/yyyy HH:mm'}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </DockPanel>
            </Grid>
        </DockPanel>
    </Grid>
</Page>
