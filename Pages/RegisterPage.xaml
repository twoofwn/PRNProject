<Page x:Class="PRNProject.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRNProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="RegisterPage">

    <Grid Background="#F8F9FA">
        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="8" Padding="15"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Width="280" Background="White" >
            <StackPanel>
                <TextBlock Text="Đăng ký tài khoản" 
                           FontSize="20" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,15"/>

                <TextBlock Text="Tên đăng nhập:" Margin="0,0,0,3"/>
                <TextBox x:Name="UsernameTextBox" Padding="4" FontSize="13" MaxLength="100"/>

                <TextBlock Text="Tên hiển thị:" Margin="0,8,0,3"/>
                <TextBox x:Name="DisplayNameTextBox" Padding="4" FontSize="13" MaxLength="100"/>

                <TextBlock Text="Email:" Margin="0,8,0,3"/>
                <TextBox x:Name="EmailTextBox" Padding="4" FontSize="13" MaxLength="200"/>

                <TextBlock Text="Mật khẩu:" Margin="0,8,0,3"/>
                <PasswordBox x:Name="PasswordBox" Padding="4" FontSize="13"/>

                <TextBlock Text="Xác nhận mật khẩu:" Margin="0,8,0,3"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Padding="4" FontSize="13"/>

                <Button x:Name="RegisterButton" Content="Đăng ký" Margin="0,18,0,0"
                        Padding="8,5" FontSize="14" FontWeight="SemiBold"
                        Background="#28A745" Foreground="White" BorderThickness="0"
                        Click="RegisterButton_Click"/>

                <Button x:Name="GoToLoginButton" Content="Đã có tài khoản? Đăng nhập" Margin="0,10,0,0"
                        FontSize="11" BorderThickness="0" Background="Transparent" Foreground="Blue"
                        Cursor="Hand" Click="GoToLoginButton_Click" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
