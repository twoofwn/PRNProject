<Page x:Class="PRNProject.Pages.ProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRNProject.Pages"
      xmlns:windows="clr-namespace:PRNProject.Windows"
      mc:Ignorable="d" 
      xmlns:components="clr-namespace:PRNProject.Pages.Components"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProjectPage">

    <Page.Resources>
        <local:HexToBrushConverter x:Key="HexToBrushConverter"/>

        <Style x:Key="ProjectCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="150"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="2" Color="LightGray" Opacity="0.5" BlurRadius="10"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <DockPanel LastChildFill="True">
        <components:Sidebar DockPanel.Dock="Left"/>

        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="PROJECTS CỦA BẠN" FontSize="24" FontWeight="Bold" Margin="5,0,0,15"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ProjectsItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ProjectCardStyle}" PreviewMouseLeftButtonUp="ProjectCard_PreviewMouseLeftButtonUp">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" CornerRadius="8,8,0,0"
                                            Background="{Binding ColorHex, Converter={StaticResource HexToBrushConverter}}"/>
                                    <TextBlock Grid.Row="1" Text="{Binding Title}" FontWeight="Bold" FontSize="16" Margin="12,8" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Grid.Row="2" Text="{Binding Description}" TextWrapping="Wrap" Margin="12,0" Foreground="Gray"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,15,5,0" HorizontalAlignment="Right">
                <Button Content="Thêm Project" Width="120" Padding="8,5" Click="AddButton_Click"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Page>
