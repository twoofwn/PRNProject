<Page x:Class="PRNProject.Pages.ProjectBoardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRNProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProjectBoardPage">

    <Page.Resources>
        <local:PriorityToColorConverter x:Key="PriorityToColorConverter"/>
        <Style TargetType="Border" x:Key="KanbanColumnStyle">
            <Setter Property="Background" Value="#F4F5F7"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>
        <DataTemplate x:Key="TaskItemTemplate">
            <Border Background="White" CornerRadius="3" Padding="10" Margin="0,5" BorderThickness="1" BorderBrush="#DDDDDD">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Height="8" CornerRadius="3,3,0,0" Margin="-10,-10,-10,5" Background="{Binding PriorityId, Converter={StaticResource PriorityToColorConverter}}"/>
                    <TextBlock Grid.Row="0" Text="{Binding Title}" FontWeight="Bold" TextWrapping="Wrap" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="1" Text="{Binding DueAt, StringFormat='dd/MM/yyyy'}" Foreground="Gray" FontSize="11" Margin="0,5,0,0"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <Button Content="&lt; Quay lại" Click="BackButton_Click" VerticalAlignment="Center" Padding="8,4"/>
            <TextBlock x:Name="ProjectTitleTextBlock" Text="Project Title" FontSize="24" FontWeight="Bold" Margin="15,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Thêm Task" Click="AddTask_Click"/>
            <Button Content="Sửa Task" Margin="10,0" Click="EditTask_Click"/>
            <Button Content="Xóa Task" Background="IndianRed" Foreground="White" Click="DeleteTask_Click"/>
            <Button Content="Sửa Project" Margin="20,0,0,0" Click="EditProjectButton_Click"/>
            <Button Content="Xóa Project" Margin="10,0,0,0" Background="#D32F2F" Foreground="White" Click="DeleteProjectButton_Click"/>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Style="{StaticResource KanbanColumnStyle}">
                <StackPanel>
                    <TextBlock Text="CẦN LÀM (Todo)" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ListView x:Name="TodoListView" ItemTemplate="{StaticResource TaskItemTemplate}" BorderThickness="0" Background="Transparent" AllowDrop="True" Drop="ListView_Drop" PreviewMouseLeftButtonDown="ListView_PreviewMouseLeftButtonDown" MouseMove="ListView_MouseMove"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" Style="{StaticResource KanbanColumnStyle}">
                <StackPanel>
                    <TextBlock Text="ĐANG LÀM (In Progress)" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ListView x:Name="InProgressListView" ItemTemplate="{StaticResource TaskItemTemplate}" BorderThickness="0" Background="Transparent" AllowDrop="True" Drop="ListView_Drop" PreviewMouseLeftButtonDown="ListView_PreviewMouseLeftButtonDown" MouseMove="ListView_MouseMove"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="2" Style="{StaticResource KanbanColumnStyle}">
                <StackPanel>
                    <TextBlock Text="HOÀN THÀNH (Done)" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ListView x:Name="DoneListView" ItemTemplate="{StaticResource TaskItemTemplate}" BorderThickness="0" Background="Transparent" AllowDrop="True" Drop="ListView_Drop" PreviewMouseLeftButtonDown="ListView_PreviewMouseLeftButtonDown" MouseMove="ListView_MouseMove"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
