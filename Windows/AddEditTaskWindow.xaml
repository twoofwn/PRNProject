<Window x:Class="PRNProject.Windows.AddEditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRNProject.Windows"
        mc:Ignorable="d"
        Title="Thêm Task Mới" Height="500" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        >
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Tiêu đề Task:" Margin="0,0,0,5"/>
            <TextBox x:Name="TitleTextBox" Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <TextBlock Text="Mô tả:" Margin="0,0,0,5"/>
            <TextBox x:Name="DescriptionTextBox" Padding="5" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Height="100"/>
        </StackPanel>

        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                <TextBlock Text="Độ ưu tiên:" Margin="0,0,0,5"/>
                <ComboBox x:Name="PriorityComboBox" Padding="5"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                <TextBlock Text="Trạng thái:" Margin="0,0,0,5"/>
                <ComboBox x:Name="StatusComboBox" Padding="5"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="3" Margin="0,10,0,0">
            <TextBlock Text="Hạn chót (Due Date):" Margin="0,0,0,5"/>
            <DatePicker x:Name="DueDatePicker"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,10,0,0">
            <TextBlock Text="Giao cho:" Margin="0,0,0,5"/>
            <ComboBox x:Name="AssignUserComboBox" 
                      Padding="5"
                      DisplayMemberPath="DisplayName" 
                      SelectedValuePath="UserId"/>
        </StackPanel>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Lưu" Width="80" Padding="8,5" IsDefault="True" Click="SaveButton_Click"/>
            <Button Content="Hủy" Width="80" Padding="8,5" Margin="10,0,0,0" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>