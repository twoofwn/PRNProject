<Window x:Class="PRNProject.Windows.AddEditProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRNProject.Windows"
        mc:Ignorable="d"
        Title="AddEditProjectWindow" Height="450" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Tiêu đề:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="TitleTextBox" Padding="5"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Mô tả:" Margin="0,15,10,0" VerticalAlignment="Top"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="DescriptionTextBox" Padding="5" Margin="0,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="80"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Mã màu (Hex):" VerticalAlignment="Center" Margin="0,15,10,0"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="ColorHexTextBox" Padding="5" Margin="0,15,0,0" ToolTip="Ví dụ: #4CAF50"/>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Lưu" Width="80" Padding="8,5" Margin="0,0,10,0" IsDefault="True" Click="SaveButton_Click"/>
            <Button Content="Hủy" Width="80" Padding="8,5" IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
